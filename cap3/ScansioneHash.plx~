#!/usr/bin/perl
use warnings;
use strict;
#Mappa con chiave e valore
my %luoghi=(
		Paolo 	=> "Roma",
		Aldo	=> "Firenze",
		Marco	=> "Torino",
		Kevin	=> "Palau",
		Giulia	=> "Rimini", 
		Tina	=> "Bologna",
		Piera 	=> "Ravenna"
	); 
#Mi stampo l'hash in maniera strana ma questo può essere dovuto sia alla verione di Perl
#sia al fatto che le hash non sono ordinate per natura
for(keys %luoghi){
print "$_ vive a $luoghi{$_}\n";
}
