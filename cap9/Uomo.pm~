#!/usr/bin/perl
#In breve con il polimorfismo intendiamo la proprietà di un oggetto quella di #assumere diverse forme.

package Uomo;
use warnings;
use strict;
sub new{#Costruttore default
my $class=shift;
my $cdef={};
bless($cdef,$class);
}

sub setDati{
my $self=shift;
$self->{"Nome"}="Marco";
$self->{"Sesso"}="M";
$self->{"Professione"}="Tecnico Nucleare";
}

sub getDati{
my $self=shift;
print "#" x 20,"\n";
print "Dati uomo\n";
print "#" x 20,"\n";
my($key,$value);
#while(($key,$value)=each(%$self)){
#print "$key:$value.\n";
#}
while( ($key, $value)=each %$self){
print $key, " : ", $value, "\n";
}
print "#" x 20,"\n";
}
1;